{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Example Benchmark",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/example.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "AWS_PROFILE": "virtual-cells-dev"
            },
            "envFile": "${workspaceFolder}/model-serving/runtimes/mlflow/scvi/.env",
            "args": ["--model-runtime", "${input:modelRuntime}",
                     "--model-mode", "${input:modelMode}"]
        },
        {
            "name": "Run mlflow,scvi,local",
            "type": "debugpy",
            "request": "launch",
            "module": "src.czibench.runners.example_model_runner",
            "console": "integratedTerminal",
            "args": [
                "--model-runtime-type",
                "mlflow",
                "--model-resource-url",
                "${workspaceFolder}/model-serving/runtimes/mlflow/scvi/runtime",
                "--input-data-url",
                "${workspaceFolder}/model-serving/runtimes/mlflow/scvi/example.h5ad"
            ]
        },
        {
            "name": "Run mlflow,scvi,remote",
            "type": "debugpy",
            "request": "launch",
            "module": "src.czibench.runners.example_model_runner",
            "console": "integratedTerminal",
            "args": [
                "--model-runtime-type",
                "mlflow",
                "--model-endpoint",
                "${input:modelEndpoint}",
                "--input-data-url",
                "${input:inputDataUrl}",
            ],
            "envFile": "${workspaceFolder}/model-serving/runtimes/mlflow/scvi/.env",
        }
    ],
    "inputs": [
        {
            "id": "modelEndpoint",
            "type": "promptString",
            "description": "Enter the model endpoint"
        },
        {
            "id": "inputDataUrl",
            "type": "promptString",
            "description": "Enter the input data URL"
        },
        {
            "id": "modelRuntime",
            "type": "pickString",
            "description": "Select the model runtime",
            "options": ["mlflow", "sagemaker"]
        },        
        {
            "id": "modelMode",
            "type": "pickString",
            "description": "Select the invocation mode, local or remote",
            "options": ["local", "remote"]
        }
    ]
}