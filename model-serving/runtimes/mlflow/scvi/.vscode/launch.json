{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deploy Model: local",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/deploy.py",
            "console": "integratedTerminal",
            "args": ["--target", "local"]
        },
        {
            "name": "Deploy Model: databricks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/deploy.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--target", "databricks",
                "--experiment-name", "/Users/atolopko@chanzuckerberg.com/model-serving-poc/experiments/scvi"
            ]
        },
        {
            "name": "Deploy Model: sagemaker",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/deploy.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--target", "sagemaker",
                "${input:forceOption}"
            ],
            "justMyCode": false
        },
        {
            "name": "Run Model: mlflow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "args": [
                "--input-h5ad", "${input:inputDataUrl}",
            ],
        },
        {
            "name": "Run Model: debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": [
                "--input-h5ad", "${input:inputDataUrl}",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs":[
        {
            "id": "modelEndpoint",
            "type": "promptString",
            "description": "Enter the model endpoint"
        },
        {
            "id": "inputDataUrl",
            "type": "promptString",
            "description": "Enter the input data URL"
        },
        {
            "id": "forceOption",
            "type": "pickString",
            "description": "Force MLflow package build",
            "options": ["--use-existing-package", "--force-package-build"]
        }
    ]

}